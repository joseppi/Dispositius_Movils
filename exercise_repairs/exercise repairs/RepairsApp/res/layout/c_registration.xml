<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/registration"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background_picture"
              android:orientation="vertical">

    <TextView
        android:id="@+id/editregistrationLoginTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="Login:"
        android:textColor="@color/orange"
        android:textSize="22sp"/>

    <!-- maxLines as substitute of singleLine doesn't work -->
    <EditText
        android:id="@+id/editregistrationLoginEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:maxLines="1"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/editregistrationPasswordTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="Password:"
        android:textColor="@color/orange"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/editregistrationPasswordEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/editregistrationNameTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="Name:"
        android:textColor="@color/orange"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/editregistrationNameEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:maxLines="1"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/editregistrationSurnameTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="Surname:"
        android:textColor="@color/orange"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/editregistrationSurnameEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:maxLines="1"
        android:singleLine="true"/>

    <Button
        android:id="@+id/editregistrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="REGISTER"
        android:textColor="@color/orange"/>

</LinearLayout>

